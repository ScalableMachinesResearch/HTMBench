INC=-I../common -I${TSX_ROOT}/lib/rtm
CFLAGS=-fopenmp -g -O3 -fno-inline -DRTM $(INC)
LDFLAGS=-lgomp -lm -lrtm -L${TSX_ROOT}/lib/rtm

SRCS := main.c util.c ../common/parboil.c
BASES := $(basename $(SRCS))
OBJS := $(addsuffix .o,$(BASES))
CC=gcc

histo: $(OBJS)
	$(CC) -o $@ $^ $(LDFLAGS) $(CFLAGS)
%.o : %.c
	$(CC) -c -o $@ $< $(CFLAGS)
../common/%.o : ../common/%.c
		$(CC) -c -o $@ $< $(CFLAGS)

clean:
	rm -rf $(OBJS) histo
